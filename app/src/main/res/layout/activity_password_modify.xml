<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exit_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:drawableTop="@mipmap/left"
            android:background="@color/bg_white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="密码修改"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:background="@color/bg_white"/>
    </FrameLayout>
    <View
        android:layout_below="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <EditText
        android:id="@+id/modifyUserNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="请输入你的用户名" />


    <EditText
        android:id="@+id/modifyPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyUserNameEditText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="请输入你的新密码"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyPasswordEditText"
        android:text="注意：必须由六位以上的小写英文字母、数字组成。"
        android:textSize="10dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"/>



    <EditText
        android:id="@+id/modifyPasswordConfirmEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyPasswordEditText"
        android:layout_marginTop="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:hint="请确认你的新密码"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/modifyPasswordConfirmEditText"
        android:text="注意：必须由六位以上的小写英文字母、数字组成。"
        android:textSize="10dp"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/passwordModifyButton"
            android:layout_below="@+id/modifyPasswordConfirmEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:background="@drawable/btn_red_round"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

</RelativeLayout>