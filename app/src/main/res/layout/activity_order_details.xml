<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/closeBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:drawableTop="@mipmap/left"
            android:background="@color/bg_white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单详情"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="20dp"
            android:background="@color/bg_white"/>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/ordersIDDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:text="订单号："
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/favouriteLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:background="@color/bg_white">
        <ImageView
            android:id="@+id/ordersDetailsImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/ordersDetailsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MiniTrunk肩背包"
            android:layout_marginHorizontal="10dp"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/orderDetailRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <TextView
        android:id="@+id/ordersDetailsMoneyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="合计：178元（含运费）"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:gravity="right"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:background="@color/bg_white"/>

</LinearLayout>