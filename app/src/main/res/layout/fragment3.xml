<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_background">

        <ImageView
            android:id="@+id/head_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/head"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/toLoginTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登陆→"
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/bg_white">

        <Button
            android:id="@+id/like_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/bg_white"
            android:drawableTop="@mipmap/like"
            android:text="心愿单"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/orders_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/bg_white"
            android:drawableTop="@mipmap/order"
            android:text="全部订单"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/message_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/bg_white"
            android:drawableTop="@mipmap/message"
            android:text="消息"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_white">

        <Button
            android:id="@+id/password_modify_btn"
            android:drawableLeft="@mipmap/cash_pledge"
            android:text="密码修改"
            style="@style/mine_below_button"
            />
        <View
            style="@style/line"
            android:layout_marginLeft="40dp"/>

        <Button
        android:id="@+id/addressMan_btn"
        android:drawableLeft="@mipmap/ginge_certification"
        android:text="地址管理"
        style="@style/mine_below_button"
        />
        <View
        style="@style/line"
        android:layout_marginLeft="40dp"/>

        <Button
            android:id="@+id/question_btn"
            android:drawableLeft="@mipmap/commonquestion"
            android:text="常见问题"
            style="@style/mine_below_button"
            />
        <View
            style="@style/line"
            android:layout_marginLeft="40dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关于"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginLeft="37dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="版本号：1.0"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/exitID_btn"
            android:text="退出账号"
            style="@style/mine_below_button"
            android:paddingLeft="43dp"/>
        <View
            style="@style/line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    </LinearLayout>


</LinearLayout>